<h1>Political tweets</h1>

<% if current_user %>
  <p><a href="<%= url '/countries/new' %>">Create a new country</a></p>

  <% @countries.each do |country| %>
    <p>
      <%= country[:name] %>
      <small>
        <form action="<%= url "/countries/#{country[:id]}/rebuild" %>" method="post">
          <button>rebuild</button>
        </form>
      </small>
    </p>
  <% end %>
<% else %>
  <p><a href="<%= url '/auth/twitter' %>">Log in with Twitter</a> to create your first country.</p>
<% end %>
